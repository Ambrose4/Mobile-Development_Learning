<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <!-- external intents-they link outside the app        -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ny Times"
            android:textColor="#E80C0C"
            android:layout_margin="8dp"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:id="@+id/nytimes"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quick Matt location"
            android:textColor="#E80C0C"
            android:layout_margin="8dp"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:id="@+id/quickmatt"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call us"
            android:textColor="#E80C0C"
            android:layout_margin="8dp"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:id="@+id/callus"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="#E80C0C"
            android:layout_margin="8dp"
            android:backgroundTint="#000000"
            android:padding="15dp"
            android:id="@+id/camera"/>










    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>